<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="rogMsg.GUIController"
	xmlns:fx="http://javafx.com/fxml/1" alignment="top_left" hgap="10" vgap="10">
	<padding><Insets top="25" bottom="10" left="25"/></padding>
	<children>
	<VBox GridPane.columnIndex="0">
		<Text text="Group Name" fx:id="groupName" GridPane.columnIndex="0" GridPane.rowIndex="0" textAlignment="LEFT"
		GridPane.columnSpan="1"/>
		
		<ScrollPane fx:id="userList">
			<Label text="User 1">
			</Label>
		</ScrollPane>
	</VBox>
	<VBox GridPane.columnIndex="1">
		<TabPane fx:id="announcements">
			<Tab fx:id="announcementsTab" text="Announcements">
			</Tab>
		</TabPane>
	</VBox>
	<VBox GridPane.columnIndex="2">
		<TabPane fx:id="extraControls">
			<Tab fx:id="lists" text="Lists">
			</Tab>
			<Tab fx:id="polls" text="Polls">
			</Tab>
		</TabPane>
	</VBox>
	</children>
</GridPane>

